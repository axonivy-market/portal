{
  "$schema" : "https://json-schema.axonivy.com/process/13.1.2/process.json",
  "id" : "1966AF48E663B661",
  "config" : {
    "data" : "Signal.LeaveRequestSideStep1Data"
  },
  "elements" : [ {
      "id" : "f1",
      "type" : "TaskEnd",
      "visual" : {
        "at" : { "x" : 736, "y" : 200 }
      }
    }, {
      "id" : "f2",
      "type" : "SignalStartEvent",
      "name" : "Signal side step 1",
      "config" : {
        "signalCode" : "ch:axonivy:portal:component:example:sideStep1:created",
        "output" : {
          "map" : { },
          "code" : [
            "import com.axonivy.portal.components.enums.SideStepType;",
            "import com.axonivy.portal.components.dto.SideStepProcessParam;",
            "import ch.ivyteam.ivy.workflow.ICase;",
            "import ch.ivyteam.ivy.workflow.businesscase.IBusinessCase;",
            "import com.axonivy.portal.components.dto.SideStepDTO;",
            "import com.google.gson.Gson;",
            "import java.util.Map;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "",
            "ivy.log.warn(\"Signal data 1 {0} \", signal.getSignalData());",
            "SideStepProcessParam data = BusinessEntityConverter.jsonValueToEntity(signal.getSignalData() as String, SideStepProcessParam.class) as SideStepProcessParam;",
            "",
            "// custom params",
            "Map params = data.getSideStepDto().getParams();",
            "out.originalTaskId = data.getSideStepDto().getOriginalTaskId();",
            "out.originalCaseId = params.get(\"caseId\") as Long;",
            "",
            "// required fields",
            "out.assignee = data.getAssignee().getName();",
            "out.comment = data.getComment();",
            "out.stepType = data.getSelectedStepType();"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 272, "y" : 200 }
      },
      "connect" : [
        { "id" : "f15", "to" : "f4" }
      ]
    }, {
      "id" : "f4",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskId); %>",
          "responsible" : {
            "type" : "USER_FROM_ATTRIBUTE",
            "script" : "in1.assignee"
          }
        },
        "case" : {
          "name" : "Side step case 1"
        },
        "output" : {
          "code" : [
            "",
            "ivy.case.attachToBusinessCase(in1.originalCaseId);"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 416, "y" : 200 }
      },
      "connect" : [
        { "id" : "f5", "to" : "f6", "color" : "default" }
      ]
    }, {
      "id" : "f6",
      "type" : "DialogCall",
      "name" : "Side step example 1",
      "config" : {
        "dialog" : "com.axonivy.portal.components.examples.SideStepExample:start(String,Long,String,com.axonivy.portal.components.enums.SideStepType)",
        "call" : {
          "map" : {
            "param.originalTaskId" : "in.originalTaskId",
            "param.caseId" : "in.originalCaseId",
            "param.comment" : "in.comment",
            "param.stepType" : "in.stepType"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 584, "y" : 200 }
      },
      "connect" : [
        { "id" : "f7", "to" : "f1" }
      ]
    } ]
}