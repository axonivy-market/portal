          "code" : [
            "import ch.ivyteam.ivy.workflow.ICase;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "import java.util.Map;",
            "import java.util.HashMap;",
            "import com.axonivy.portal.components.dto.SideStepDTO;",
            "import com.axonivy.portal.components.constant.CustomFields;",
            "import ch.ivyteam.ivy.security.ISecurityContext;",
            "import com.axonivy.portal.components.dto.UserDTO;",
            "import com.axonivy.portal.components.examples.leaverequest.LeaveRequest;",
            "//LeaveRequest requestData = ivy.repo.get(LeaveRequest.class) as LeaveRequest;",
            "ICase caze = ivy.case;",
            "",
            "//ivy.log.info(\"requestData.toString() {0}\", requestData.toString());",
            "Map params1 = new HashMap();",
            "params1.put(\"caseId\", caze.getId());",
            "params1.put(\"stepId\", \"1\");",
            "params1.put(\"taskId\", task.uuid());",
            "",
            "SideStepDTO dto1 = SideStepDTO.builder()",
            "  .taskId(task.uuid())",
            "  .processName(\"Side step 1: Add comment\")",
            "  .signal(\"ch:axonivy:portal:component:example:sideStep1:created\")",
            "  .params(params1)",
            "  .build();",
            "",
            "Map params2 = new HashMap();",
            "params2.put(\"stepId\", \"2\");",
            "params2.put(\"taskId\", task.uuid());",
            "params2.put(\"caseId\", caze.getId());",
            "",
            "SideStepDTO dto2 = SideStepDTO.builder()",
            "  .taskId(task.uuid())",
            "  .processName(\"Side step 2: Add comment\")",
            "  .signal(\"ch:axonivy:portal:component:example:sideStep2:created\")",
            "  .params(params2)",
            "  .build();",
            "",
            "Map params3 = new HashMap();",
            "params3.put(\"caseId\", caze.getId());",
            "params3.put(\"stepId\", \"3\");",
            "params3.put(\"taskId\", task.uuid());",
            "",
            "SideStepDTO dto3 = SideStepDTO.builder()",
            "  .taskId(task.uuid())",
            "  .processName(\"Side step 3: Add comment\")",
            "  .signal(\"ch:axonivy:portal:component:example:sideStep3:created\")",
            "  .params(params3)",
            "  .build();",
            "List dtos = new List();",
            "",
            "dtos.add(dto1);",
            "dtos.add(dto2);",
            "dtos.add(dto3);",
            "",
            "String valueString = BusinessEntityConverter.entityToJsonValue(dtos);",
            "",
            "task.customFields().stringField(CustomFields.SIDE_STEPS).set(valueString);"
          ]
        },
