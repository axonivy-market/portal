  {
    "id": "customized-dashboard",
    "title": "Custom Dashboard",
    "permissions": ["#gm1","CostObject"],
    "widgets": [
      {
        "type": "task",
        "id": "task_1",
        "layout": {
          "x": 0, "y": 0, "w": 9, "h": 4
        },
        "rowsPerPage": 20,
        "sortField": "name",
        "columns": [
          {
            "field": "start"
          },
          {
            "field": "priority",
            "filterList": ["LOW","NORMAL"],
            "visible": "false"
          },
          {
            "field": "id"
          },
          {
            "field": "name"
          },
          {
            "field": "activator"
          },
          {
            "field": "state"
          },
          {
            "field": "startTimestamp",
            "filterFrom": "04/11/2021"
          },
          {
            "format": "string",
            "header": "Employee",
            "field": "employee",
            "style": "width: 110px"
          },
          {
            "format": "number",
            "header": "Days",
            "field": "days",
            "style": "width: 80px"
          }
        ]
      },
      {
        "type": "case",
        "id": "case_1",
        "layout": {
          "x": 0, "y": 4, "w": 9, "h": 4
        },
        "sortField": "name",
        "columns": [
          {
            "field": "id"
          },
          {
            "field": "name"
          },
          {
            "field": "description"
          },
          {
            "field": "state"
          },
          {
            "field": "creator"
          },
          {
            "field": "startTimestamp"
          },
          {
            "field": "endTimestamp"
          },
          {
            "format": "string",
            "header": "Person in charge",
            "field": "responsibleEmployee",
            "style": "width: 110px"
          },
          {
            "format": "timestamp",
            "header": "Shipment date",
            "field": "shipmentDate",
            "style": "width: 120px"
          }
        ]
      },
      {
        "type": "process",
        "id": "compact_mode",
        "name": "Process Widget",
        "displayMode": "COMPACT_MODE",
        "layout": {
          "x": 9, "y": 0, "w": 3, "h": 4
        },
        "categories": ["CostObject"]
      },
      {
         "type": "custom",
         "id": "custom-widget",
         "name": "Custom Widget",
         "layout": {
            "x": 10, "y": 11, "w": 12, "h": 4
         },
         "data" : {
           "processStart": "Start Processes/DashboardCustomWidgetExample/investmentList.ivp",
           "params": [
               {
                  "type": "user",
                  "name": "customer",
                  "value": "demo"
               },
               {
                  "type": "date",
                  "name": "startDate",
                  "value": "11/19/2021"
               },
               {
                  "type": "string",
                  "name": "note",
                  "value": "a short note for user"
               }
            ]
        }
      }
    ]
  }
]