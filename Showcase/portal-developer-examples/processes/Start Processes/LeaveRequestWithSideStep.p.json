      "name" : "Config side step in case level",
      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.portal.components.dto.DisplayNameDTO;",
            "import ch.ivyteam.ivy.workflow.ICase;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "import java.util.Map;",
            "import java.util.HashMap;",
            "import com.axonivy.portal.components.dto.SideStepConfigurationDTO;",
            "import com.axonivy.portal.components.dto.SideStepProcessDTO;",
            "import com.axonivy.portal.components.constant.CustomFields;",
            "",
            "ICase caze = ivy.case;",
            "",
            "SideStepProcessDTO dto1 = SideStepProcessDTO.builder()",
            "  .processNameCmsUri(\"/Processes/SideStep/AskMoreDetails\")",
            "  .signal(\"com:axonivy:portal:developerexample:sideStep:askMoreDetails\")",
            "  .build();",
            "",
            "SideStepProcessDTO dto2 = SideStepProcessDTO.builder()",
            "  .processNameCmsUri(\"/Processes/SideStep/CEOApproval\")",
            "  .signal(\"com:axonivy:portal:developerexample:sideStep:CEOApproval\")",
            "  .build();",
            "",
            "// This option has custom security member call",
            "SideStepProcessDTO dto3 = SideStepProcessDTO.builder()",
            "  .processNameCmsUri(\"/Processes/SideStep/InformCustomer\")",
            "  .customSecurityMembersCallable(\"getCustomSecurityMemberForSideStep()\")",
            "  .signal(\"com:axonivy:portal:developerexample:sideStep:informCustomer\")",
            "  .build();",
            "",
            "// Define side step dto",
            "List processes = new List();",
            "processes.add(dto1);",
            "processes.add(dto2);",
            "processes.add(dto3);",
            "",
            "SideStepConfigurationDTO sideStepDto = SideStepConfigurationDTO.builder()",
            ".processes(processes)",
            ".customParallelSideStepTitleCmsUri(\"/Processes/SideStep/CustomParallelTitle\")",
            ".customSwitchSideStepTitleCmsUri(\"/Processes/SideStep/CustomSwitchTitle\")",
            ".build();",
            "",
            "// Convert dto to string and save to case custom field",
            "String valueString = BusinessEntityConverter.entityToJsonValue(sideStepDto);",
            "caze.customFields().textField(CustomFields.SIDE_STEP_CASE).set(valueString);"
          ]
