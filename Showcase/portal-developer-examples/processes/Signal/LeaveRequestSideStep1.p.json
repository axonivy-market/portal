{
  "$schema" : "https://json-schema.axonivy.com/process/12.0.0/process.json",
  "id" : "1966AF48E663B661",
  "config" : {
    "data" : "com.axonivy.portal.developerexamples.LeaveRequestSideStep1Data"
  },
  "elements" : [ {
      "id" : "f1",
      "type" : "TaskEnd",
      "visual" : {
        "at" : { "x" : 736, "y" : 200 }
      }
    }, {
      "id" : "f2",
      "type" : "SignalStartEvent",
      "name" : "Signal side step 1",
      "config" : {
        "signalCode" : "com:axonivy:portal:developerexample:sideStep1:created",
        "output" : {
          "map" : { },
          "code" : [
            "import java.util.Arrays;",
            "import com.axonivy.portal.components.enums.SideStepType;",
            "import com.axonivy.portal.components.dto.SideStepProcessParam;",
            "import ch.ivyteam.ivy.workflow.ICase;",
            "import ch.ivyteam.ivy.workflow.businesscase.IBusinessCase;",
            "import com.axonivy.portal.components.dto.SideStepDTO;",
            "import com.google.gson.Gson;",
            "import java.util.Map;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "",
            "SideStepProcessParam data = BusinessEntityConverter.jsonValueToEntity(signal.getSignalData() as String, SideStepProcessParam.class) as SideStepProcessParam;",
            "",
            "// custom params",
            "Map params = data.getSideStepDto().getParams();",
            "out.originalTaskUuid = data.getSideStepDto().getOriginalTaskUuid();",
            "out.originalCaseUuid = params.get(\"caseUuid\") as String;",
            "",
            "// required fields",
            "out.members = Arrays.asList(data.getMemberName());",
            "out.comment = data.getComment();",
            "out.stepType = data.getSelectedStepType();"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 272, "y" : 200 }
      },
      "connect" : [
        { "id" : "f15", "to" : "f4" }
      ]
    }, {
      "id" : "f4",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskUuid); %>"
        },
        "case" : {
          "name" : "Side step case 1"
        },
        "output" : {
          "code" : "ivy.case.attachToBusinessCase(ivy.wf.findCase(in1.originalCaseUuid).getId());"
        }
      },
      "visual" : {
        "at" : { "x" : 416, "y" : 200 }
      },
      "connect" : [
        { "id" : "f5", "to" : "f6", "color" : "default" }
      ]
    }, {
      "id" : "f6",
      "type" : "DialogCall",
      "name" : "Side step example 1",
      "config" : {
        "dialog" : "com.axonivy.portal.developerexamples.customization.sidestep.SideStepExample:start(String,String,String,com.axonivy.portal.components.enums.SideStepType)",
        "call" : {
          "map" : {
            "param.originalTaskUuid" : "in.originalTaskUuid",
            "param.caseUuid" : "in.originalCaseUuid",
            "param.comment" : "in.comment",
            "param.stepType" : "in.stepType"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 584, "y" : 200 }
      },
      "connect" : [
        { "id" : "f7", "to" : "f1" }
      ]
    } ]
}