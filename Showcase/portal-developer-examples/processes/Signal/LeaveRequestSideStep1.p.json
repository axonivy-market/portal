{
  "$schema" : "https://json-schema.axonivy.com/14.0-dev/project/process.json",
  "id" : "1966AF48E663B661",
  "config" : {
    "data" : "com.axonivy.portal.developerexamples.LeaveRequestSideStep1Data"
  },
  "elements" : [ {
      "id" : "f1",
      "type" : "TaskEnd",
      "visual" : {
        "at" : { "x" : 784, "y" : 200 }
      }
    }, {
      "id" : "f2",
      "type" : "SignalStartEvent",
      "name" : "Signal side step ask more details",
      "config" : {
        "signalCode" : "com:axonivy:portal:developerexample:sideStep:askMoreDetails",
        "output" : {
          "map" : { },
          "code" : [
            "import ch.ivyteam.ivy.workflow.ITask;",
            "import ch.ivyteam.ivy.security.ISecurityMember;",
            "import com.axonivy.portal.components.dto.SideStepProcessParamDTO;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "",
            "// Get data send from Portal",
            "SideStepProcessParamDTO data = BusinessEntityConverter.jsonValueToEntity(signal.getSignalData() as String, SideStepProcessParamDTO.class) as SideStepProcessParamDTO;",
            "",
            "// get data from param",
            "ISecurityMember member = ivy.security.members().findById(data.getSecurityMemberId());",
            "out.securityMember = member != null ? member.getMemberName() : \"\";",
            "out.comment = data.getComment();",
            "out.isParallel = data.getIsParallelSideStep();",
            "out.originalTaskUuid = data.getTaskUuid() as String;",
            "",
            "ITask task = ivy.wf.findTask(out.originalTaskUuid);",
            "if (task != null){",
            "  out.originalCaseUuid = task.getCase().uuid();",
            "}"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 272, "y" : 200 }
      },
      "connect" : [
        { "id" : "f15", "to" : "f0" }
      ]
    }, {
      "id" : "f4",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskUuid, \"/Dialogs/com/axonivy/portal/developerexamples/customization/sidestep/CustomSideStepPrefix\"); %>",
          "responsible" : {
            "type" : "USER_FROM_ATTRIBUTE",
            "script" : "in1.securityMember.substring(1)"
          }
        },
        "case" : {
          "name" : "Side step case 1"
        },
        "output" : {
          "code" : "ivy.case.attachToBusinessCase(ivy.wf.findCase(in1.originalCaseUuid).getId());"
        }
      },
      "visual" : {
        "at" : { "x" : 464, "y" : 200 }
      },
      "connect" : [
        { "id" : "f5", "to" : "f6", "color" : "default" }
      ]
    }, {
      "id" : "f6",
      "type" : "DialogCall",
      "name" : "Side step ask more details",
      "config" : {
        "dialog" : "com.axonivy.portal.developerexamples.customization.sidestep.SideStepAskMoreDetails:start(String,String,String,Boolean)",
        "call" : {
          "map" : {
            "param.originalTaskUuid" : "in.originalTaskUuid",
            "param.caseUuid" : "in.originalCaseUuid",
            "param.comment" : "in.comment",
            "param.isParallel" : "in.isParallel"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 632, "y" : 200 }
      },
      "connect" : [
        { "id" : "f7", "to" : "f1" }
      ]
    }, {
      "id" : "f0",
      "type" : "Alternative",
      "config" : {
        "conditions" : {
          "f3" : "in.securityMember.startsWith(\"#\")"
        }
      },
      "visual" : {
        "at" : { "x" : 368, "y" : 200 },
        "labelOffset" : { "x" : 14, "y" : 34 }
      },
      "connect" : [
        { "id" : "f3", "to" : "f4", "color" : "default" },
        { "id" : "f9", "to" : "f8", "via" : [ { "x" : 368, "y" : 296 } ] }
      ]
    }, {
      "id" : "f8",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskUuid, \"/Dialogs/com/axonivy/portal/developerexamples/customization/sidestep/CustomSideStepPrefix\"); %>",
          "responsible" : {
            "type" : "ROLE_FROM_ATTRIBUTE",
            "script" : "in1.securityMember"
          }
        },
        "case" : {
          "name" : "Side step case 1"
        },
        "output" : {
          "code" : "ivy.case.attachToBusinessCase(ivy.wf.findCase(in1.originalCaseUuid).getId());"
        }
      },
      "visual" : {
        "at" : { "x" : 464, "y" : 296 }
      },
      "connect" : [
        { "id" : "f10", "to" : "f6", "via" : [ { "x" : 632, "y" : 296 } ] }
      ]
    } ]
}