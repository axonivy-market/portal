{
  "$schema" : "https://json-schema.axonivy.com/14.0-dev/project/process.json",
  "id" : "196A8BB1A00D45BF",
  "kind" : "CALLABLE_SUB",
  "config" : {
    "data" : "com.axonivy.portal.developerexamples.LeaveRequestSideStep2Data"
  },
  "elements" : [ {
      "id" : "f0",
      "type" : "SignalStartEvent",
      "name" : "Signal side step inform Customer",
      "config" : {
        "signalCode" : "com:axonivy:portal:developerexample:sideStep:informCustomer",
        "output" : {
          "map" : { },
          "code" : [
            "import ch.ivyteam.ivy.workflow.ITask;",
            "import ch.ivyteam.ivy.security.ISecurityMember;",
            "import com.axonivy.portal.components.dto.SideStepProcessParamDTO;",
            "import com.axonivy.portal.components.persistence.converter.BusinessEntityConverter;",
            "",
            "SideStepProcessParamDTO data = BusinessEntityConverter.jsonValueToEntity(signal.getSignalData() as String, SideStepProcessParamDTO.class) as SideStepProcessParamDTO;",
            "",
            "// get data from params",
            "ISecurityMember member = ivy.security.members().findById(data.getSecurityMemberId());",
            "out.securityMember = member != null ? member.getMemberName() : \"\";",
            "out.comment = data.getComment();",
            "out.isParallel = data.getIsParallelSideStep();",
            "out.originalTaskUuid = data.getTaskUuid() as String;",
            "",
            "ITask task = ivy.wf.findTask(out.originalTaskUuid);",
            "if (task != null){",
            "  out.originalCaseUuid = task.getCase().uuid();",
            "}"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 408, "y" : 192 }
      },
      "connect" : [
        { "id" : "f1", "to" : "f7" }
      ]
    }, {
      "id" : "f2",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskUuid, null); %>",
          "responsible" : {
            "type" : "USER_FROM_ATTRIBUTE",
            "script" : "in1.securityMember.substring(1)"
          }
        },
        "case" : {
          "name" : "Side step case 3"
        },
        "output" : {
          "code" : [
            "",
            "ivy.case.attachToBusinessCase(ivy.wf.findCase(in1.originalCaseUuid).getId());"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 712, "y" : 192 }
      },
      "connect" : [
        { "id" : "f3", "to" : "f4", "color" : "default" }
      ]
    }, {
      "id" : "f4",
      "type" : "DialogCall",
      "name" : "Side step Inform Customer",
      "config" : {
        "dialog" : "com.axonivy.portal.developerexamples.customization.sidestep.SideStepInformCustomer:start(String,String,String,Boolean)",
        "call" : {
          "map" : {
            "param.originalTaskUuid" : "in.originalTaskUuid",
            "param.caseUuid" : "in.originalCaseUuid",
            "param.comment" : "in.comment",
            "param.isParallel" : "in.isParallel"
          }
        }
      },
      "visual" : {
        "at" : { "x" : 872, "y" : 192 }
      },
      "connect" : [
        { "id" : "f5", "to" : "f6" }
      ]
    }, {
      "id" : "f6",
      "type" : "TaskEnd",
      "visual" : {
        "at" : { "x" : 1024, "y" : 192 }
      }
    }, {
      "id" : "f7",
      "type" : "Alternative",
      "config" : {
        "conditions" : {
          "f8" : "in.securityMember.startsWith(\"#\")"
        }
      },
      "visual" : {
        "at" : { "x" : 576, "y" : 192 },
        "labelOffset" : { "x" : 14, "y" : 34 }
      },
      "connect" : [
        { "id" : "f8", "to" : "f2", "color" : "default" },
        { "id" : "f10", "to" : "f9", "via" : [ { "x" : 576, "y" : 296 } ] }
      ]
    }, {
      "id" : "f9",
      "type" : "TaskSwitchEvent",
      "config" : {
        "task" : {
          "name" : "<%= com.axonivy.portal.components.publicapi.SideStepAPI.createSideStepTaskName(in1.originalTaskUuid, null); %>",
          "responsible" : {
            "type" : "ROLE_FROM_ATTRIBUTE",
            "script" : "in1.securityMember"
          }
        },
        "case" : {
          "name" : "Side step case 3"
        },
        "output" : {
          "code" : [
            "",
            "ivy.case.attachToBusinessCase(ivy.wf.findCase(in1.originalCaseUuid).getId());"
          ]
        }
      },
      "visual" : {
        "at" : { "x" : 704, "y" : 296 }
      },
      "connect" : [
        { "id" : "f11", "to" : "f4", "via" : [ { "x" : 872, "y" : 296 } ] }
      ]
    } ]
}