<?xml version="1.0" encoding="ISO-8859-1"?>

<project name="${project.name}">

	<skin>
		<groupId>org.apache.maven.skins</groupId>
		<artifactId>maven-fluido-skin</artifactId>
		<version>1.3.1</version>
	</skin>
	<custom>
		<fluidoSkin>
			<topBarEnabled>false</topBarEnabled>
			<skipGenerationDate>true</skipGenerationDate>
			<leftColumnClass>span2</leftColumnClass>
			<bodyColumnClass>span10</bodyColumnClass>
			<breadcrumbDivider>»</breadcrumbDivider>
		</fluidoSkin>
	</custom>

	<poweredBy>
		<logo name="Axon.ivy" href="http://www.axonivy.com/axon-ivy/home/"
		img="images/AxonIvySuite.png"/>
	</poweredBy>

	<bannerLeft>
		<name>${project.name}</name>
	</bannerLeft>

	<bannerRight>
		<name>E.ON Business Service GmbH</name>
		<src>project/images/eon-logo.gif</src>
	</bannerRight>

	<body>
		<head>
			<link rel="stylesheet" href="/css/site.css" type="text/css" />
			<link type="image/x-icon; charset=binary" href="images/favicon.ico" rel="shortcut icon" />
		</head>
		<links>
			<item name="Homepage" href="http://www.xpertivy.ch" target="_blank"/>
			<item name="Server Guide" href="http://www.xpertivy.ch/releases/Xpert.ivy/4.3.21/documents/ServerGuide.pdf" target="_blank"/>
			<item name="Designer Guide" href="http://www.xpertivy.ch/releases/Xpert.ivy/4.3.21/documents/DesignerGuide.pdf" target="_blank"/>
		</links>
		
		<menu name="Project Documentation">
			<item name="Installation" href="/instal/index.html" />
			<item name="Service Documentation" href="/docu/index.html" >
				<item name="Services" href="/docu/services.html" />
				<item name="Service Objects" href="/docu/classes.html" />
				<item name="Error Codes" href="/docu/errors.html" />
				<item name="Application Requirements" href="/docu/applicationrequirements.html" />
			</item>
			<item name="Release Notes" href="/release/index.html" />
		</menu>
	</body>
</project>