pipeline {
  agent {
    label 'linux'
  }

  options {
    buildDiscarder(logRotator(numToKeepStr: '60', artifactNumToKeepStr: '5'))
  }

  parameters {
    choice(name: 'engine', choices: ['10'], description: 'Engine to choose e.g. 10')
  }

  stages {
    stage('backupDatabase') {
      steps {
        script {
          today = new Date().format('dd-MM-yyyy_HH-mm')
          config = [master:[engine: '10', systemDatabase: 'AxonIvySystemDatabase-10']]
          engineParentDir = '/var/tools/ivy/'
          engineDir = engineParentDir + config[params.engine]['engine']
          databaseBackupDir = '/var/database-backups/'
          databaseName = config[params.engine]['systemDatabase']
          dbBackupFile = databaseBackupDir + databaseName + '-' + today + '.dump'

          sh """
            echo ====================Backup database====================
            cd ${engineDir}
            [ -d ${databaseBackupDir} ] ||  mkdir -p ${databaseBackupDir}
            docker exec -u postgres postgres-10 pg_dump -Fc ${databaseName} > ${dbBackupFile}
          """
        }
      }
    }
    
    stage('upgradeEngine') {
      steps {
        script {
          sh """
            echo ====================Upgrade engine====================
            cd ${engineDir}
            docker compose stop
            docker compose pull
            docker compose up -d
          """
        }
      }
    }
  }
}


