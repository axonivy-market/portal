pipeline {
  agent {label 'slave_performance_server'}
  
  options {
    buildDiscarder(logRotator(numToKeepStr: '60', artifactNumToKeepStr: '5'))
  }
  
  triggers {
    cron('H 9 * * *')
  }

  tools { 
      maven '3.6' 
      jdk '11' 
  }

  parameters {
      string(name: 'testPatternToRun', defaultValue: 'portal.guitest.userexample.test.*Test,portal.guitest.test.*Test', description: 'Test pattern to run.')
      string(name: 'engineDownloadURL', defaultValue: '-Divy.engine.download.url=https://developer.axonivy.com/permalink/sprint/axonivy-engine-windows.zip', description: 'Where to download engine')
  }

  stages {
    stage('build') {
      steps {
        script {
          powershell '''
            # Turn off Elasticsearch port from 19200 to 19210
            "=== Try to release Elasticsearch port ==="
            for (($port = 19200); $port -lt 19210; ($port++)) {
              Get-NetTCPConnection -LocalPort $port -erroraction 'silentlycontinue'
              if ( $LastExitCode -eq 0 ) {
                Stop-Process -Id (Get-NetTCPConnection -LocalPort $port).OwningProcess -Force
              }
            }

            "===Remove Old-Engine folder==="

            #cd $env:WORKSPACE/AxonIvyPortal/PortalTest/engine
            #rmdir * -recurse -force
          '''

          powershell '''
            #This script replaces engine port in /resources/config_windows_server.properties from 8000 to 8080
            (Get-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties) -replace '8000', '8080' | Set-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties
              
            #This script replaces Portal application name in /resources/config_windows_server.properties from Portal to demo-portal
            (Get-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties) -replace 'Portal', 'demo-portal' | Set-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties

            #Replace server address	
            (Get-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties) -replace '192.168.73.8', 'localhost' | Set-Content AxonIvyPortal/PortalTest/resources/config_windows_server.properties
          '''
          bat '''
            rem stop Axon.ivy Engine - LTS
            sc query "Axon.ivy Engine - LTS" | find /i "RUNNING"
            if not "%ERRORLEVEL%"=="1" ( net stop "Axon.ivy Engine - LTS" )

            rem stop Axon.ivyEngine8.0
            sc query "Axon.ivyEngine8.0" | find /i "RUNNING"
            if not "%ERRORLEVEL%"=="1" ( net stop Axon.ivyEngine8.0 )

            rem stop Axon.ivyEngineTrunk
            sc query "Axon.ivyEngineTrunk" | find /i "RUNNING"
            if not "%ERRORLEVEL%"=="1" ( net stop Axon.ivyEngineTrunk )
            exit 0
          '''
          def modules = ['AxonIvyPortal/PortalStyle', 'AxonIvyPortal/PortalKit', 'AxonIvyPortal/PortalTemplate', 'AxonIvyPortal/AxonIvyExpress', 'AxonIvyPortal/PortalKitTestHelper', 'Showcase/portal-user-examples', 'Showcase/portal-developer-examples', 'Showcase/InternalSupport']
          for (module in modules) {
            bat "mvn clean install -f ${module}/pom.xml"
          }

          bat "mvn -f AxonIvyPortal/PortalTest/customized_pom.xml versions:update-property versions:commit -Dproperty=build.plugin.version -DallowSnapshots=true -Dportal.released.version=9.1.0.0-SNAPSHOT"

          node('master') {
            echo '===Close all remote desktop connections and setup new remote destop to account Wawa==='
            bat '''
              taskkill -im mstsc.exe -F
              D:/tools/remote-desktop-plus/rdp.exe /v:10.123.1.193 /domain:wawa.vn /u:wawa /p:SAMPLE_TEXT_1 /w:2560 /h:1440 /noclose
            '''
          }


          bat '''
            Echo ===Close opening IE browsers===
            tasklist /fi "imagename eq IEDriverServer.exe" |find ":" > nul
            if errorlevel 1 taskkill -im IEDriverServer.exe /fi "USERNAME eq wawa" -F
            tasklist /fi "imagename eq iexplore.exe" |find ":" > nul
            if errorlevel 1 taskkill -im iexplore.exe /fi "USERNAME eq wawa" -F

            Echo ===Close opening FireFox browsers===
            tasklist /fi "imagename eq GeckoFireFoxDriver.exe" |find ":" > nul
            if errorlevel 1 taskkill -im GeckoFireFoxDriver.exe -F
            tasklist /fi "imagename eq firefox.exe" |find ":" > nul
            if errorlevel 1 taskkill -im firefox.exe -F
          '''

          bat "mvn clean test -f AxonIvyPortal/PortalTest/customized_pom.xml %engineDownloadURL% -Dtest=${params.testPatternToRun} -DtrimStackTrace=false -Divy.engine.directory=engine -Divy.deploy.timeout.seconds=60 -DengineUrl=http://localhost:8080/ivy -Divy.compiler.engine.start.timeout=120 -Dskip.redeploy=false"
        }
      }
    }
  }

  post {
    always {
      archiveArtifacts artifacts: "*/*/target/*.iar", allowEmptyArchive: true, fingerprint: true
      junit allowEmptyResults: true, healthScaleFactor: 2.0, testResults: '**/surefire-reports/TEST-*.xml'
    }
  }
}
