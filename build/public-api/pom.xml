<?xml version="1.0" encoding="utf-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ch.ivyteam.ivy.document.portal</groupId>
  <artifactId>publicAPI</artifactId>
  <version>9.2.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>
  <properties>
    <build.plugin.version>9.1.0</build.plugin.version>
    <ivy.engine.version>9.2.0</ivy.engine.version>
  </properties>
  <distributionManagement>
    <repository>
      <id>repo.axonivy.io</id>
      <url>https://repo.axonivy.io/artifactory/ext-release-local/</url>
    </repository>
    <snapshotRepository>
      <id>repo.axonivy.io</id>
      <url>https://repo.axonivy.io/artifactory/ext-snapshot-local/</url>
    </snapshotRepository>
  </distributionManagement>
  <!--
  <dependencies>
    <dependency>
      <groupId>ch.ivyteam.ivy.project.portal</groupId>
      <artifactId>portalStyle</artifactId>
      <version>9.2.0.0-SNAPSHOT</version>
      <type>jar</type>
    </dependency>
  </dependencies>
  -->
  <build>
    <plugins>
		<!--
      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <version>${build.plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <compilerWarnings>false</compilerWarnings>
        </configuration>
      </plugin>	 
	  -->
	  
	  <plugin>
		  <groupId>org.apache.maven.plugins</groupId>
		  <artifactId>maven-site-plugin</artifactId>
		  <version>3.7.1</version>
		</plugin>
		<plugin>
		  <groupId>org.apache.maven.plugins</groupId>
		  <artifactId>maven-project-info-reports-plugin</artifactId>
		  <version>3.0.0</version>
		</plugin>
	  
	  <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <!-- Manual patched version by rwei to support java 11 -->
        <version>3.2.0</version>
        <configuration>
          <links>
            <link>https://docs.oracle.com/en/java/javase/11/docs/api/</link>
          </links>
          <bottom>
            <![CDATA[
            <span style="float:left; display:block">Copyright &copy; ${build-year}<br>${vendor.name}<br><br>All Rights Reserved</span>
            <span style="float:right; display:block">Documentation was generated<br>on ${build-date}</span>]]>
          </bottom>
          <splitindex>true</splitindex>
          <version>true</version>
          <use>true</use>
          <maxmemory>2000M</maxmemory>
          <source>11</source>
          <javadocVersion>11</javadocVersion>
          <doclint>none</doclint>
          <failOnError>false</failOnError>
		  <excludePackageNames>ch.ivy.addon.*</excludePackageNames>
        </configuration>
        <executions>
          <execution>
            <id>public-api-jar</id>
            <goals>
              <goal>aggregate-jar</goal>
            </goals>
            <configuration>
              <destDir>${project.build.directory}/publicApi</destDir>              

              <show>package</show>
              <author>false</author>
              <windowtitle>Axon Ivy Public API </windowtitle>
              <doctitle>
                <![CDATA[<h1>Axon Ivy Public API</h1>]]>
              </doctitle>
              <header>
                <![CDATA[<i><b>Axon Ivy Public API<br>Version ${ivy-version}.${build-datetime}</b></i>]]>
              </header>
              <footer>
                <![CDATA[<i><b>Axon Ivy Public API<br>Version ${ivy-version}.${build-datetime}</b></i>]]>
              </footer>
              
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  
  
</project>