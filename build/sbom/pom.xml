<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.axonivy.sbom</groupId>
  <artifactId>sbom</artifactId>
  <packaging>pom</packaging>

  <dependencies>
    <dependency>
      <groupId>ch.ivyteam.neo</groupId>
      <artifactId>neo-designer-bom</artifactId>
      <version>${ivy.neo.designer.version}</version>
      <type>json</type>
    </dependency>
    <dependency>
      <groupId>ch.ivyteam.monaco</groupId>
      <artifactId>monaco-yaml-ivy-bom</artifactId>
      <version>${ivy.monaco.yaml.version}</version>
      <type>json</type>
    </dependency>
    <dependency>
      <groupId>ch.ivyteam.swagger</groupId>
      <artifactId>swagger-ui-ivy-bom</artifactId>
      <version>${ivy.swagger.ui.version}</version>
      <type>json</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.6.0</version>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/sbom</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <target>
                <mkdir dir="${project.build.directory}/sbom/"/>
                <get
                  src="https://github.com/adoptium/temurin21-binaries/releases/download/jdk-${jre.version}+${jre.build.version}/OpenJDK21U-sbom_x64_windows_hotspot_${jre.version}_${jre.build.version}.json"
                  dest="${project.build.directory}/sbom/temurin-windows-bom.json"
                  skipexisting="true" />
                  <get
                  src="https://github.com/adoptium/temurin21-binaries/releases/download/jdk-${jre.version}+${jre.build.version}/OpenJDK21U-sbom_x64_mac_hotspot_${jre.version}_${jre.build.version}.json"
                  dest="${project.build.directory}/sbom/temurin-mac-bom.json"
                  skipexisting="true" />
              </target>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>