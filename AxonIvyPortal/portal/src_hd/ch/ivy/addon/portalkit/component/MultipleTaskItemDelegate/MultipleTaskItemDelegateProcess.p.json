          "code" : [
            "import ch.ivyteam.ivy.workflow.ITask;",
            "",
            "for(ITask task : in.tasks) {",
            "  try {",
            "    String delegateComment = task.customFields().stringField(\"delegateComment\").getOrDefault(\"\");",
