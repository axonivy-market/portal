    }, {
      "id" : "f47",
      "type" : "Script",
      "name" : "call agent",
      "config" : {
        "output" : {
          "map" : {
            "out" : "in",
            "out.keyword" : "in.keyword"
          },
          "code" : [
            "import com.axonivy.portal.components.service.IvyAdapterService;",
            "import java.util.HashMap;",
            "import java.util.Map;",
            "import java.util.*;",
            "import java.lang.Class;",
            "import com.axonivy.portal.enums.PortalCustomSignature;",
            "import ch.ivy.addon.portalkit.persistence.converter.BusinessEntityConverter;",
            "import com.axonivy.portal.dto.dashboard.filter.DashboardFilter;",
            "import com.axonivy.portal.enums.PortalSystemMessage;",
            "import com.axonivy.portal.Filter;",
            "import ch.ivy.addon.portalkit.service.WidgetFilterService;",
            "import ch.ivy.addon.portalkit.dto.dashboard.DashboardWidget;",
            "import ch.ivy.addon.portalkit.dto.dashboard.WidgetFilterModel;",
            "",
            "String portalSignature = \"invokeAgent(String,String,List<String>,String,String,Class,String)\";",
            "String question = out.keyword;",
            "String systemMessage = PortalSystemMessage.FILTER_CREATION_INSTRUCTION.getMessage();",
            "Map params = new HashMap();",
            "params.put(\"query\", question);",
            "params.put(\"systemMessage\", systemMessage);",
            "params.put(\"resultType\", String.class);",
            "Map result = new HashMap();",
            "try {",
            "    result = IvyAdapterService.startSubProcessInSecurityContext(portalSignature, params);",
            "    List<DashboardFilter> filters = BusinessEntityConverter.jsonValueToEntities(result.get(\"resultObject\").toString(), DashboardFilter.class);",
            "    WidgetFilterService widgetFilterService = WidgetFilterService.getInstance();",
            "    in.caseWidget.setUserFilters(filters);",
            "    DashboardWidget widget = in.caseWidget;",
            "    WidgetFilterModel filterModel = widgetFilterService.prepareSaveFilter(widget);",
            "    List<WidgetFilterModel> list = new ArrayList();",
            "    list.add(filterModel);",
            "    in.caseWidget.setSavedFilters(list);",
            "    ivy.log.info(in.caseWidget.getSavedFilters().getFirst().toString());",
            "} catch(Exception e) {",
            "    ivy.log.error(e.getCause());",
            "}"
          ]
        }
      },
