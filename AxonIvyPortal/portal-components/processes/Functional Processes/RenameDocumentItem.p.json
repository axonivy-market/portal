      "config" : {
        "output" : {
          "code" : [
            "import com.axonivy.portal.components.enums.CustomSignature;",
            "import com.axonivy.portal.components.enums.CustomProcessStatus;",
            "import java.util.HashMap;",
            "import java.util.Map;",
            "import com.axonivy.portal.components.service.IvyAdapterService;",
            "",
            "Map params = new HashMap();",
            "",
            "params.put(\"businessCase\", in.businessCase);",
            "params.put(\"document\", in.document);",
            "",
            "Map result = IvyAdapterService.startSubProcessInSecurityContext(CustomSignature.RENAME_DOCUMENT_ITEM.getSignature(), params);",
            "in.hasCustomProcess = result != null;",
            "if (in.hasCustomProcess) {",
            "  in.message = result.get(\"message\").toString();",
            "  in.isSuccess = result.get(\"isSuccess\").toBoolean();",
            "  in.status = CustomProcessStatus.toEnum(result.get(\"status\").toString());",
            "}"
          ]
        }
