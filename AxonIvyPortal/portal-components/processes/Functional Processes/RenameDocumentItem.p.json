      "name" : "Update filename",
      "elements" : [ {
          "id" : "S10-f9",
          "type" : "Script",
          "name" : "Update filename and create note",
          "config" : {
            "output" : {
              "code" : [
                "import com.axonivy.portal.components.service.CaseDocumentService;",
                "import java.util.Arrays;",
                "import ch.ivyteam.ivy.workflow.document.IDocument;",
                "",
                "IDocument document = in.businessCase.documents().get(in.document.uuid);",
                "",
                "if (!document.getName().equals(in.document.name)) {",
                "  String note = ivy.cms.co(\"/Dialogs/com/axonivy/portal/components/DocumentTable/RenamingDocumentNote\", Arrays.asList(ivy.session.getSessionUserName(), document.getName(), in.document.getName()));",
                "  ",
                "  try {",
                "    if (document.getName().equalsIgnoreCase(in.document.name)) {",
                "      in.businessCase.documents().move(document, CaseDocumentService.getPathAfterRename(document.getRelativePath(), in.document.name + System.currentTimeMillis().toString()));",
                "    }",
                "    ",
                "    in.businessCase.documents().move(document, CaseDocumentService.getPathAfterRename(document.getRelativePath(), in.document.name));",
                "    in.businessCase.createNote(ivy.session, note);",
                "  } catch (Exception e) {   ",
                "    in.isSuccess = false;",
                "    in.message = ivy.cms.co(\"/Dialogs/com/axonivy/portal/components/DocumentTable/RenamingFailed\");",
                "  }",
                "}"
              ]
            }
          },
          "visual" : {
            "at" : { "x" : 488, "y" : 160 },
            "size" : { "width" : 144, "height" : 62 }
          },
          "connect" : [
