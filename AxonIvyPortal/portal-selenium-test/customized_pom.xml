<?xml version='1.0' encoding='utf-8'?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.axonivy.ivy.api</groupId>
    <artifactId>ivy-project-parent</artifactId>
    <version>13.1.0-SNAPSHOT</version>
    <relativePath></relativePath>
  </parent>
  <groupId>com.axonivy.portal</groupId>
  <artifactId>portal-selenium-test</artifactId>
  <version>13.1.0-SNAPSHOT</version>
  <packaging>iar</packaging>
  <properties>
    <ivy.engine.version>13.2.0</ivy.engine.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>
    <dependency>
      <groupId>com.axonivy.portal</groupId>
      <artifactId>portal</artifactId>
      <version>13.1.0-SNAPSHOT</version>
      <type>iar</type>
    </dependency>
    <dependency>
      <groupId>com.axonivy.ivy.webtest</groupId>
      <artifactId>web-tester</artifactId>
      <version>11.3.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.codeborne</groupId>
      <artifactId>selenide-proxy</artifactId>
      <version>7.7.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <testSourceDirectory>${basedir}/src_test/</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>start.test.engine</id>
            <phase>process-test-classes</phase>
            <goals>
              <goal>start-test-engine</goal>
            </goals>
          </execution>
          <execution>
            <id>stop.test.engine</id>
            <goals>
              <goal>stop-test-engine</goal>
            </goals>
            <phase>post-integration-test</phase>
          </execution>
          <execution>
            <id>portaltesthelper.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\PortalKitTestHelper\target\portalKitTestHelper-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
          <execution>
            <id>internalsupport.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\..\Showcase\InternalSupport\target\internalSupport-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M4</version>
        <configuration>
          <testFailureIgnore>true</testFailureIgnore>
          <rerunFailingTestsCount>2</rerunFailingTestsCount>
          <argLine>
            -Dtest.engine.url=${test.engine.url}
            -Dtest.engine.app=demo-portal
          </argLine>
        </configuration>
        <executions>
          <execution>
            <id>selenium.web.tests</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>