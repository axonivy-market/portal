<?xml version='1.0' encoding='utf-8'?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.axonivy.portal</groupId>
  <artifactId>portal-document-screenshots-selenide</artifactId>
  <version>12.0.5-SNAPSHOT</version>
  <packaging>pom</packaging>
  <properties>
    <build.plugin.version>12.0.1</build.plugin.version>
    <ivy.engine.version>12.0.5</ivy.engine.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <distributionManagement>
    <repository>
      <id>repo.axongroupio.ch</id>
      <url>https://repo.axongroupio.ch/artifactory/ext-release-local/</url>
    </repository>
    <snapshotRepository>
      <id>repo.axongroupio.ch</id>
      <url>https://repo.axongroupio.ch/artifactory/ext-snapshot-local/</url>
    </snapshotRepository>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>com.axonivy.portal</groupId>
      <artifactId>portal</artifactId>
      <version>12.0.5-SNAPSHOT</version>
      <type>iar</type>
    </dependency>
    <dependency>
      <groupId>com.axonivy.ivy.webtest</groupId>
      <artifactId>web-tester</artifactId>
      <version>11.3.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.codeborne</groupId>
      <artifactId>selenide-proxy</artifactId>
      <version>7.7.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <testSourceDirectory>${basedir}/src_test/</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <version>${build.plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <encoding>UTF-8</encoding>
          <compilerWarnings>false</compilerWarnings>
        </configuration>
        <executions>
          <execution>
            <id>default-installEngine</id>
            <goals>
              <goal>installEngine</goal>
            </goals>
            <phase>initialize</phase>
          </execution>
          <execution>
            <id>default-compileProject</id>
            <goals>
              <goal>compileProject</goal>
            </goals>
            <phase>compile</phase>
          </execution>
          <execution>
            <id>default-test-compile</id>
            <goals>
              <goal>test-compile</goal>
            </goals>
            <phase>test-compile</phase>
          </execution>
          <execution>
            <id>default-ivy-test-properties</id>
            <goals>
              <goal>ivy-test-properties</goal>
            </goals>
            <phase>test</phase>
          </execution>
          <execution>
            <id>start.test.engine</id>
            <phase>process-test-classes</phase>
            <goals>
              <goal>start-test-engine</goal>
            </goals>
          </execution>
          <execution>
            <id>stop.test.engine</id>
            <goals>
              <goal>stop-test-engine</goal>
            </goals>
            <phase>post-integration-test</phase>
          </execution>
          <execution>
            <id>portaltesthelper.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\PortalKitTestHelper\target\portalKitTestHelper-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
          <execution>
            <id>internalsupport.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\..\Showcase\InternalSupport\target\internalSupport-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
          <execution>
            <id>default-pack-iar</id>
            <goals>
              <goal>pack-iar</goal>
            </goals>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.0.0-M4</version>
        <configuration>
          <testFailureIgnore>false</testFailureIgnore>
          <argLine>
            -Dtest.engine.url=${test.engine.url}
            -Dtest.engine.app=demo-portal
          </argLine>
        </configuration>
        <executions>
          <execution>
            <id>selenium.web.tests</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>zip.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>