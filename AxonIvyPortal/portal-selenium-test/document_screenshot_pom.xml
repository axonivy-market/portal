<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.axonivy.ivy.api</groupId>
    <artifactId>ivy-project-parent</artifactId>
    <version>13.2.0-SNAPSHOT</version>
    <relativePath/>
  </parent>
  <groupId>com.axonivy.portal</groupId>
  <artifactId>portal-document-screenshots-selenide</artifactId>
  <version>13.2.0-m284</version>
  <packaging>pom</packaging>
  <distributionManagement>
    <repository>
      <id>repo.axongroupio.ch</id>
      <url>https://repo.axongroupio.ch/artifactory/ext-release-local/</url>
    </repository>
    <snapshotRepository>
      <id>repo.axongroupio.ch</id>
      <url>https://repo.axongroupio.ch/artifactory/ext-snapshot-local/</url>
    </snapshotRepository>
  </distributionManagement>
  <dependencies>
    <dependency>
      <groupId>com.axonivy.portal</groupId>
      <artifactId>portal</artifactId>
      <version>13.2.0-m284</version>
      <type>iar</type>
    </dependency>
    <dependency>
      <groupId>com.axonivy.ivy.api.test</groupId>
      <artifactId>ivy-web-test-api</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>com.axonivy.ivy.api</groupId>
      <artifactId>ivy-api</artifactId>
    </dependency>
    <dependency>
      <groupId>com.codeborne</groupId>
      <artifactId>selenide-proxy</artifactId>
      <version>7.7.3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <repositories>
    <repository>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
      <id>central</id>
      <url>https://repo.maven.apache.org/maven2</url>
    </repository>
    <repository>
      <snapshots>
        <updatePolicy>always</updatePolicy>
      </snapshots>
      <id>maven.axonivy.com</id>
      <url>https://maven.axonivy.com</url>
    </repository>
  </repositories>
  <build>
    <testSourceDirectory>${basedir}/src_test/</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>com.axonivy.ivy.ci</groupId>
        <artifactId>project-build-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <encoding>UTF-8</encoding>
          <compilerWarnings>false</compilerWarnings>
        </configuration>
        <executions>
          <execution>
            <id>default-installEngine</id>
            <goals>
              <goal>installEngine</goal>
            </goals>
            <phase>initialize</phase>
          </execution>
          <execution>
            <id>generate-data-class-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-data-class-sources</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-dialog-form-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-dialog-form-sources</goal>
            </goals>
          </execution>
          <execution>
            <id>generate-web-service-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>generate-web-service-sources</goal>
            </goals>
          </execution>
          <execution>
            <id>default-compileProject</id>
            <goals>
              <goal>compileProject</goal>
            </goals>
            <phase>compile</phase>
          </execution>
          <execution>
            <id>default-test-compile</id>
            <goals>
              <goal>test-compile</goal>
            </goals>
            <phase>test-compile</phase>
          </execution>
          <execution>
            <id>start.test.engine</id>
            <phase>process-test-classes</phase>
            <goals>
              <goal>start-test-engine</goal>
            </goals>
          </execution>
          <execution>
            <id>stop.test.engine</id>
            <goals>
              <goal>stop-test-engine</goal>
            </goals>
            <phase>post-integration-test</phase>
          </execution>
          <execution>
            <id>portaltesthelper.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\PortalKitTestHelper\target\portalKitTestHelper-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
          <execution>
            <id>internalsupport.deploy</id>
            <goals>
              <goal>deploy-to-engine</goal>
            </goals>
            <configuration>
              <deployFile>..\..\Showcase\InternalSupport\target\internalSupport-${project.version}.iar</deployFile>
              <deployToEngineApplication>demo-portal</deployToEngineApplication>
            </configuration>
            <phase>process-test-classes</phase>
          </execution>
          <execution>
            <id>default-pack-iar</id>
            <goals>
              <goal>pack-iar</goal>
            </goals>
            <phase>none</phase>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <testFailureIgnore>false</testFailureIgnore>
          <argLine>
            -Dtest.engine.url=${test.engine.url}
            -Dtest.engine.app=demo-portal
          </argLine>
        </configuration>
        <executions>
          <execution>
            <id>selenium.web.tests</id>
            <phase>test</phase>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <appendAssemblyId>false</appendAssemblyId>
              <descriptors>
                <descriptor>zip.xml</descriptor>
              </descriptors>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
